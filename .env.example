# üîí Monarch Passport MVP - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ========================================
# üìä SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

# Supabase Project URL (public)
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (public - safe for client-side)
# This key has limited permissions defined by your RLS policies
REACT_APP_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# ========================================
# üîê SECURITY SECRETS
# ========================================
# Generate a strong random secret for QR code encryption
# Use: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
PAPILLON_SECRET=your-32-byte-base64-encoded-secret-here

# JWT Secret for session management (if using custom auth)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-here

# Encryption key for sensitive data
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-encryption-key-here

# ========================================
# üåê ENVIRONMENT CONFIGURATION
# ========================================
# Environment: development, staging, production
NODE_ENV=development

# Application URL (for redirects, webhooks, etc.)
REACT_APP_BASE_URL=http://localhost:3000

# API Base URL (if using separate backend)
REACT_APP_API_URL=http://localhost:3001

# ========================================
# üîß FEATURE FLAGS
# ========================================
# Enable/disable features
REACT_APP_ENABLE_ADMIN_PANEL=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=false

# Beta access control
REACT_APP_BETA_ENABLED=true
BETA_PASSWORD=your-beta-password-here

# ========================================
# üìß EXTERNAL SERVICES (Optional)
# ========================================
# Email service (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# File storage (if not using Supabase storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# üì± MOBILE/PWA CONFIGURATION
# ========================================
# Push notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# App store configuration
REACT_APP_APP_STORE_URL=https://apps.apple.com/app/monarch-passport
REACT_APP_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.monarch.passport

# ========================================
# üéØ BUSINESS CONFIGURATION
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# QR Code settings
QR_CODE_EXPIRY_HOURS=24
MAX_SCANS_PER_USER_PER_HOUR=50

# WINGS currency settings
DEFAULT_SCAN_WINGS=10
REFERRAL_BONUS_WINGS=25
ADMIN_BONUS_WINGS=100

# ========================================
# üîç MONITORING & LOGGING
# ========================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable security monitoring
ENABLE_SECURITY_MONITORING=true
SECURITY_ALERT_EMAIL=security@yourcompany.com

# Database connection monitoring
DB_POOL_SIZE=10
DB_TIMEOUT_MS=30000

# ========================================
# üöÄ DEPLOYMENT CONFIGURATION
# ========================================
# Vercel specific (if deploying to Vercel)
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# CDN configuration
REACT_APP_CDN_URL=https://cdn.yourcompany.com

# Domain configuration
REACT_APP_DOMAIN=yourapp.com
REACT_APP_SUBDOMAIN=app

# ========================================
# üß™ TESTING CONFIGURATION
# ========================================
# Test database (separate from production)
TEST_DATABASE_URL=your-test-database-url

# Test API keys (sandbox/test keys only)
TEST_SUPABASE_URL=your-test-supabase-url
TEST_SUPABASE_ANON_KEY=your-test-anon-key

