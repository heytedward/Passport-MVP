# ========================================
# MONARCH PASSPORT MVP - ENVIRONMENT VARIABLES
# ========================================
# 
# COPY THIS FILE TO .env AND FILL IN YOUR ACTUAL VALUES
# NEVER COMMIT THE .env FILE TO VERSION CONTROL
#
# cp .env.example .env
# 
# ========================================

# ========================================
# SUPABASE CONFIGURATION
# ========================================

# Your Supabase project URL (found in your Supabase dashboard)
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (found in your Supabase dashboard)
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Your Supabase service role key (for admin operations - keep secret!)
REACT_APP_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Application secret key (generate a strong random string)
REACT_APP_SECRET_KEY=your-app-secret-key-here

# Encryption key for QR codes and sensitive data (generate a strong random string)
REACT_APP_ENCRYPTION_KEY=your-encryption-key-here

# JWT secret for token signing (generate a strong random string)
REACT_APP_JWT_SECRET=your-jwt-secret-here

# Beta access password (for testing purposes)
REACT_APP_BETA_PASSWORD=your-beta-password-here

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application name
REACT_APP_NAME=Monarch Passport MVP

# Application version
REACT_APP_VERSION=0.1.0

# Default theme mode (dark/light)
REACT_APP_DEFAULT_THEME_MODE=dark

# Default gradient theme
REACT_APP_DEFAULT_GRADIENT=monarch

# Default passport theme
REACT_APP_DEFAULT_THEME=frequencyPulse

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable beta features
REACT_APP_BETA_FEATURES_ENABLED=false

# Enable/disable debug mode
REACT_APP_DEBUG_MODE=false

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================

# Maximum QR scans per minute per user
REACT_APP_RATE_LIMIT_SCANS=10

# Maximum login attempts per minute per user
REACT_APP_RATE_LIMIT_LOGINS=5

# Session timeout in minutes
REACT_APP_SESSION_TIMEOUT=60

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================

# Maximum file size in bytes (5MB default)
REACT_APP_MAX_FILE_SIZE=5242880

# Allowed file types for uploads
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ========================================
# EXTERNAL SERVICES (if needed)
# ========================================

# Analytics service (optional)
REACT_APP_ANALYTICS_ID=your-analytics-id-here

# Error tracking service (optional)
REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Security webhook URL for alerts (optional)
SECURITY_WEBHOOK_URL=your-security-webhook-url-here

# ========================================
# DEVELOPMENT ONLY
# ========================================

# Enable HTTPS in development (true/false)
HTTPS=false

# Development server port
PORT=3000

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Vercel project ID (optional - for deployment automation)
VERCEL_PROJECT_ID=your-vercel-project-id

# Vercel team ID (optional - for deployment automation)
VERCEL_TEAM_ID=your-vercel-team-id

# ========================================
# SECURITY NOTES:
# ========================================
#
# 1. All environment variables that should be available in the browser
#    MUST start with REACT_APP_
#
# 2. Never commit real API keys or secrets to version control
#
# 3. Use different values for development, staging, and production
#
# 4. Regularly rotate your API keys and secrets
#
# 5. Use strong, unique passwords for all services
#
# 6. Generate strong random strings for all secret keys
#
# 7. Keep encryption keys secure and separate from application code
#
# ========================================
